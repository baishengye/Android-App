<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--定义一个文字样式-->
    <style name="TextSmall">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--自定义去除actionBar-->
    <style name="Theme.随波云音乐.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--状态栏透明的主题-->
    <style name="Theme.随波云音乐.NoActionBar.StatusBarTransparent" parent="Theme.随波云音乐.NoActionBar"/>

    <!--toolbar样式-->
    <style name="Theme.随波云音乐.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--AppBarLayout样式-->
    <style name="Theme.随波云音乐.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--登录注册界面输入框样式-->
    <style name="EditText">
        <!--图标和内容的间距-->
        <item name="android:drawablePadding">@dimen/padding_meddle</item>

        <!--左侧图标-->
        <item name="android:drawableLeft">@drawable/ic_phone</item>

        <!--上内边距-->
        <item name="android:paddingTop">@dimen/padding_meddle</item>

        <!--下内边距-->
        <item name="android:paddingBottom">@dimen/padding_meddle</item>

        <!--最大显示一行-->
        <item name="android:lines">1</item>

        <!--上外边距-->
        <item name="android:layout_marginTop">@dimen/padding_meddle</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:background">@drawable/selector_edit_text</item>
    </style>
    
    <!--侧滑界面item容器-->
    <style name="ItemContainer">
        <!--可点击-->
        <item name="android:clickable">true</item>
        <!--左侧padding-->
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <!--右侧padding-->
        <item name="android:paddingRight">@dimen/padding_large</item>
        <!--内容垂直居中-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>
        <!--内容⽅向为⽔平-->
        <item name="android:orientation">horizontal</item>
    </style>
    <!--侧滑界⾯Item图标-->
    <style name="ItemIcon">
        <!--宽⾼-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--侧滑界⾯Item⽂本-->
    <style name="ItemText">
        <!--左侧margin-->
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
        <!--⽂本颜⾊-->
        <item name="android:textColor">@color/text</item>
        <!--宽⾼-->
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--侧滑界⾯Item值-->
    <style name="ItemTextHint">
        <!--⽂本颜⾊-->
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>